<div class="text-center">
  <form class="form">
    <p>Created by {{user.user_name}} on {{format_date date_created}}</p>

    <div class="form-group">
      <label for="blog-title">Comment:</label>
      <input
        class="form-input"
        type="text"
        id="blog-title"
        name="blog-title"
      />
    </div>
    <div class="form-group">
      <button
        id="submit-comment"
        type="submit"
        class="btn btn-primary"
      >SAVE</button>
    </div>
  </form>
</div>