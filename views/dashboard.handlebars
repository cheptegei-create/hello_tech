{{!-- welcoming message to the company --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, @{{user.user_name}}!</h2>
    <h4>User, {{user.first_name}} {{user.last_name}}</h4>
    <h4>Email: {{user.email}}</h4>
  </div>
</div>

<div class="row mt-4">
    {{!-- adding new manufacturer --}}
    <div class="col-md-6">
        <h3>Add a blog:</h3>

    <form class="form">
      <div class="form-group">
        <label for="title-name">Title:</label>
        <input class="form-input" type="text" id="title-name" name="title-name" />
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <input class="form-input" type="text" id="content" name="content-name" />
      </div>
      <div class="form-group">
        <button type="submit" id="submit-blog" class="btn btn-primary">Create</button>
      </div>
    </form>
    </div>
</div>

{{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Past Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-6">
        <h4><a href="/api/dashboard/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-3">
        <button class="btn btn-sm btn-danger del-blog" data-id="{{blog.id}}">DELETE</button>
      </div>
      <div class="col-md-3">
        <button class="btn btn-sm btn-danger update-blog" data-id="{{blog.id}}">UPDATE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <script src="/js/addBlog.js"></script>